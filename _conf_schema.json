{
  "enable_blacklist":{
    "description":"是否启用黑名单",
    "type":"bool"
  },
  "enable_whitelist":{
    "description":"是否启用白名单",
    "type":"bool"
  },
  "whitelist":{
    "description":"白名单列表",
    "hint":"不监控的QQ号",
    "obvious_hint": true,
    "type":"list"
  },
  "enable_blacklist_log":{
    "description":"记录黑名单拦截日志",
    "type":"bool"
  },
  "enable_audit_log":{
    "description":"记录审核日志",
    "type":"bool"
  },
  "enable_output_censor":{
    "description":"是否启用LLM输出审核",
    "type":"bool"
  },
  "enable_all_input_censor":{
    "description":"是否启用全输入审核",
    "type":"bool"
  },
  "enable_input_censor":{
    "description":"是否启用@或唤醒指令后的输入审核",
    "type":"bool"
  },
  "enable_image_censor":{
    "description":"是否启用图片审核",
    "type":"bool"
  },
  "enable_private_msg_censor":{
    "description":"是否启用私聊审核",
    "type":"bool"
  },
  "enable_group_msg_censor":{
    "description":"是否启用群管功能（审核群内所有消息）",
    "hint":"仅aiocqhttp支持禁言与撤回",
    "type":"bool"
  },
  "enable_group_msg_recall":{
    "description":"是否启用群管功能（撤回违规消息）",
    "hint":"仅aiocqhttp支持",
    "type":"bool"
  },
    "enable_group_msg_ban":{
    "description":"是否启用群管功能（禁言违规消息）",
    "hint":"仅aiocqhttp支持",
    "type":"bool"
  },
  "group_list":{
    "description":"启用群管功能的群聊",
    "hint":"启用群管功能的群号列表，留空则对所有群生效",
    "obvious_hint": true,
    "type":"list"
  },
  "webui": {
    "description": "WebUI 配置",
    "type": "object",
    "items": {
      "host": {
        "description": "WebUI监听地址，默认为0.0.0.0",
        "type": "string",
        "default": "0.0.0.0"
      },
      "port": {
        "description": "WebUI监听端口，默认为8192",
        "type": "int",
        "default": 8192
      },
      "secret": {
        "description": "一个足够长又足够复杂的，不需要你记住的字符串",
        "type": "string"
      },
      "password": {
        "description": "你的WebUI密码，每次登录要用",
        "type": "string",
        "default": "default"
      }
    }
  },
  "aliyun": {
    "description": "阿里云审核配置",
    "type": "object",
    "items": {
      "key_id": {
        "description": "阿里云 Key ID",
        "type": "string"
      },
      "key_secret": {
        "description": "阿里云 Key Secret",
        "type": "string"
      }
    }
  },
  "llm": {
    "description": "LLM 审核配置",
    "type": "object",
    "items": {
      "model": {
        "description": "LLM 模型名称",
        "type": "string"
      },
      "base_url": {
        "description": "LLM API 基础地址",
        "type": "string"
      },
      "api_key": {
        "description": "LLM API 密钥",
        "type": "string"
      }
    }
  },
  "tencent": {
    "description": "腾讯云审核配置",
    "type": "object",
    "items": {
      "secret_id": {
        "description": "腾讯云 Secret ID",
        "type": "string"
      },
      "secret_key": {
        "description": "腾讯云 Secret Key",
        "type": "string"
      }
    }
  },
  "text_censor_provider": {
    "description": "文本审核提供商",
    "type": "string",
    "options": ["Aliyun", "LLM", "Tencent", "Local"],
    "default": "Local"
  },
  "image_censor_provider": {
    "description": "图片审核提供商",
    "type": "string",
    "options": ["Aliyun", "Tencent", "LLM"]
  }
}
